@model Introducao.Models.UsuarioModels

@{
    ViewBag.Title = "IndexUsuario";
}

<h2>Cadastro Usuário</h2>

@using (Html.BeginForm("ResultadoUsuario", "Usuario", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Informações de usuário</legend>

        <div class="editor-label">
            @Html.LabelFor(x => x.PessoaId)
        </div>
        <div class="editor-field">
            @Html.EditorFor(x => x.PessoaId)
            @Html.ValidationMessageFor(x => x.PessoaId)
        </div>
        <div class="editor-label">
            @Html.LabelFor(x => x.Nome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(x => x.Nome)
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        <div class="editor-label">
            @Html.LabelFor(x => x.Tipo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(x => x.Tipo)
            @Html.ValidationMessageFor(x => x.Tipo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(x => x.Observacoes)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(x => x.Observacoes)
            @Html.ValidationMessageFor(x => x.Observacoes)
        </div>

        <div class="editor-label">
            @Html.LabelFor(x => x.Idade)
        </div>
        <div class="editor-field">
            @Html.EditorFor(x => x.Idade)
            @Html.ValidationMessageFor(x => x.Idade)
        </div>

        <div class="editor-label">
            @Html.LabelFor(x => x.Email)
        </div>
        <div class="editor-field">
            @Html.EditorFor(x => x.Email)
            @Html.ValidationMessageFor(x => x.Email)
        </div>

        <div class="editor-label">
            @Html.LabelFor(x => x.Login)
        </div>
        <div class="editor-field">
            @Html.EditorFor(x => x.Login)
            @Html.ValidationMessageFor(x => x.Login)
        </div>

        <div class="editor-label">
            @Html.LabelFor(x => x.Senha)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(x => x.Senha)
            @Html.ValidationMessageFor(x => x.Senha)
        </div>
        <div class="editor-label">
            @Html.LabelFor(x => x.ConfirmaSenha)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(x => x.ConfirmaSenha)
            @Html.ValidationMessageFor(x => x.ConfirmaSenha)
        </div>
    </fieldset>

    <p><input type="submit" value="Enviar" /></p>

    @section Scripts{
        @Scripts.Render("~/bundles/jqueryval");
        
        }

}

@Html.ActionLink("Voltar", "IndexUsuario", "Usuario")

